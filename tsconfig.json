{
    "compilerOptions": {
      "target": "es6",
      "jsx": "react",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./build",
      "forceConsistentCasingInFileNames": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
