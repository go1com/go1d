{
    "compilerOptions": {
      "target": "es2016",
      "jsx": "react",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./build",
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules",
      "**/*.test.tsx",
      "**/*.test.ts",
      "**/*.spec.tsx",
      "**/*.spec.ts",
      "build",
      "docs-site"
    ]
  }
