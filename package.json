{
  "name": "go1d",
  "version": "1.0.0",
  "description": "GO1 Design System",
  "main": "dist/index.js",
  "repository": "https://github.com/lukebrooker/go1d",
  "author": "Luke Brooker <mail@lukebrooker.com> (https://lukebrooker.com/)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "babel src -d dist",
    "generate-proptypes": "react-docgen build/components -i ThemeContext -o ./docs/_src/proptypes.json --pretty",
    "docs:build": "yarn tsc && yarn generate-proptypes && x0 build docs",
    "docs:dev": "yarn tsc && yarn generate-proptypes && x0 docs -p 8008",
    "deploy": "yarn docs:build && gh-pages -d dist",
    "format": "standard --fix",
    "lint": "standard --verbose | snazzy",
    "precommit": "lint-staged",
    "size": "bundlesize",
    "test": "yarn lint && jest",
    "tsc": "tsc --jsx react --outDir ./build",
    "tslint": "tslint -c tslint.json --fix ./src/**/*.tsx"
  },
  "lint-staged": {
    "src/**/*.{ts, tsx}": [
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "dependencies": {
    "color": "^3.0.0",
    "emotion": "^9.2.4",
    "react": "^16.4.1",
    "react-docgen-typescript": "^1.8.0",
    "recompose": "^0.27.1"
  },
  "devDependencies": {
    "@compositor/kit": "^1.0.43",
    "@compositor/kit-snapshot": "^1.0.24",
    "@compositor/x0": "^6.0.0-4",
    "@types/color": "^3.0.0",
    "@types/react": "^16.4.13",
    "babel-cli": "^6.26.0",
    "bundlesize": "^0.17.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react-docgen": "^2.21.0",
    "react-router-dom": "^4.3.1",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  },
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "3 kB"
    }
  ],
  "x0": {
    "title": "GO1D - GO1 Design System",
    "basename": "/go1d",
    "meta": [
      {
        "name": "twitter:card",
        "content": "GO1 Design System"
      }
    ],
    "links": [
      {
        "rel": "stylesheet",
        "href": "https://fonts.googleapis.com/css?family=Open+Sans:400,600"
      }
    ]
  }
}
