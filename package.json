{
  "name": "@go1d/go1d",
  "version": "0.2.43",
  "description": "GO1 Design System",
  "main": "build/index.js",
  "homepage": "https://apps.pages.go1.co/GO1D",
  "author": "Luke Brooker <mail@lukebrooker.com> (https://lukebrooker.com/)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "docs:build": "yarn react:docs && x0 build docs -d ./dist && cp -r docs/static/ dist",
    "npm:build": "rm -rf ./build && tsc --jsx react --outDir ./build",
    "npm:dev": "rm -rf ./build && mkdir build && cp package.json build/ && tsc -w --jsx react --outDir ./build",
    "docs:dev": "yarn react:docs && x0 docs -p 8008",
    "react:docs": "documentalist \"src/components/**/index.tsx\" --no-md > docs/react-docs.json",
    "icons": "rm -rf src/components/Icons && svgr --config-file svgr.config.js --ext tsx -d src/components/Icons src/icons/svgs && node scripts/build-Icons.index.js",
    "lint": "prettier --write ./docs/**/*.js",
    "precommit": "lint-staged",
    "size": "bundlesize",
    "test": "yarn lint && jest",
    "test:debug": "yarn lint && node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "tslint": "tslint -c tslint.json --fix ./src/**/**/*.{ts,tsx}"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "tslint -c tslint.json"
    ],
    "./docs/_src/**/*.js": [
      "prettier"
    ]
  },
  "dependencies": {
    "@tweenjs/tween.js": "^17.2.0",
    "@types/events": "^1.2.0",
    "@types/fontfaceobserver": "^0.0.6",
    "@types/react-virtualized": "^9.18.7",
    "@types/webfontloader": "^1.6.29",
    "color": "^3.0.0",
    "downshift": "^3.1.1",
    "emotion": "^9.2.4",
    "fontfaceobserver": "^2.0.13",
    "formik": "^1.3.1",
    "libreact": "^2.1.0",
    "lodash": "^4.17.11",
    "lodash-decorators": "^6.0.0",
    "react": "16.6.1",
    "react-container-dimensions": "^1.4.1",
    "react-dates": "^18.2.2",
    "react-docgen": "^2.21.0",
    "react-popper": "^1.0.2",
    "react-pose": "^4.0.1",
    "react-router-dom": "^4.3.1",
    "react-transition-group": "^2.4.0",
    "react-virtualized": "^9.20.1",
    "recompose": "^0.27.1",
    "sanitize-html": "^1.19.1"
  },
  "devDependencies": {
    "@compositor/kit": "^1.0.43",
    "@compositor/kit-snapshot": "^1.0.24",
    "@compositor/x0": "^6.0.0-4",
    "@svgr/cli": "^3.0.0",
    "@svgr/core": "^3.0.0",
    "@types/color": "^3.0.0",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.13",
    "@types/react-transition-group": "^2.0.14",
    "babel-cli": "^6.26.0",
    "bundlesize": "^0.17.0",
    "documentalist": "^1.5.0",
    "husky": "^1.2.0",
    "jest-cli": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react-testing-library": "^5.0.1",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  },
  "bundlesize": [
    {
      "path": "./build/**/*.js",
      "maxSize": "3 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "x0": {
    "title": "GO1D - GO1 Design System",
    "basename": "/GO1D",
    "outDir": "./dist",
    "meta": [
      {
        "name": "twitter:card",
        "content": "GO1 Design System"
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/components/Icons/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
