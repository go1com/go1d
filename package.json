{
  "name": "@go1d/go1d",
  "version": "3.3.0",
  "description": "Go1 Design System",
  "main": "build/index.js",
  "homepage": "https://go1d.go1.com",
  "author": "Luke Brooker <mail@lukebrooker.com> (https://lukebrooker.com/)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "happo": "happo",
    "docs:build": "yarn react:docs && x0 build docs -d ./dist && cp -r docs/static/ dist",
    "docs:build:ci": "node --max_old_space_size=4096 node_modules/.bin/x0 build docs -d ./dist --quiet && cp -r docs/static/ dist",
    "npm:build": "rm -rf ./build && node --max_old_space_size=4096 node_modules/.bin/tsc --jsx react --outDir ./build",
    "npm:dev": "rm -rf ./build && mkdir build && cp package.json build/ && tsc -w --jsx react --outDir ./build",
    "docs:dev": "yarn react:docs && x0 docs -p 8008 -o",
    "react:docs": "documentalist \"src/components/**/index.tsx\" --no-md > docs/react-docs.json",
    "ci:build": "yarn npm:build && yarn docs:build:ci && yarn storybook:build:ci",
    "storybook:build": "rm -rf ./dist_storybook && build-storybook -c ./.storybook -o ./dist_storybook",
    "storybook:build:ci": "rm -rf ./dist_storybook && node --max_old_space_size=4096 node_modules/.bin/build-storybook --quiet -c ./.storybook -o ./dist_storybook",
    "storybook": "start-storybook -p 9001 -c ./.storybook",
    "icons": "rm -rf src/components/Icons && svgr --config-file svgr.config.js --ext tsx -d src/components/Icons src/icons/svgs && node --max_old_space_size=4096 scripts/build-Icons.index.js",
    "lint": "prettier --write ./docs/**/*.js",
    "size": "bundlesize",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "test:debug": "yarn lint && node --max_old_space_size=4096 --inspect-brk ./node_modules/.bin/jest --runInBand",
    "tslint": "tslint -c tslint.json \"./src/**/*.{ts,tsx}\"",
    "tslint:fix": "tslint -c tslint.json \"./src/**/*.{ts,tsx}\" --fix",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "tslint -c tslint.json --fix"
    ],
    "./docs/_src/**/*.js": [
      "prettier"
    ]
  },
  "dependencies": {
    "@tweenjs/tween.js": "^17.2.0",
    "@types/events": "^1.2.0",
    "@types/react-virtualized": "^9.18.7",
    "@types/slate": "^0.44.0",
    "@types/slate-react": "^0.21.0",
    "@types/webfontloader": "^1.6.29",
    "color": "^3.1.2",
    "core-js": "^2.6.9",
    "downshift": "^3.2.7",
    "element-resize-detector": "^1.2.0",
    "emotion": "^9.2.4",
    "formik": "^1.5.4",
    "invariant": "^2.2.4",
    "is-hotkey": "^0.1.4",
    "lodash": "^4.17.11",
    "lodash-decorators": "^6.0.0",
    "moment": "^2.24.0",
    "react-colorful": "^5.0.1",
    "react-dates": "^19.0.3",
    "react-dropzone": "^8.2.0",
    "react-easy-crop": "^3.3.2",
    "react-iframe": "^1.8.0",
    "react-popper": "^1.3.3",
    "react-transition-group": "^2.4.0",
    "react-virtualized": "^9.21.2",
    "slate": "^0.44.10",
    "slate-react": "^0.21.16",
    "smoothscroll-polyfill": "^0.4.3",
    "xss": "^1.0.6"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@changesets/cli": "^2.13.1",
    "@compositor/kit": "^1.0.43",
    "@compositor/kit-snapshot": "^1.0.24",
    "@compositor/x0": "github:chrisdwheatley/x0#babel-upgrade",
    "@mdx-js/mdx": "^0.20.3",
    "@storybook/addon-a11y": "^6.2.1",
    "@storybook/addon-actions": "^6.2.1",
    "@storybook/addon-essentials": "^6.2.1",
    "@storybook/addons": "^6.2.1",
    "@storybook/react": "^6.2.1",
    "@storybook/theming": "^6.2.1",
    "@svgr/cli": "^3.0.0",
    "@svgr/core": "^3.0.0",
    "@types/color": "^3.0.0",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.120",
    "@types/node": "^11.11.3",
    "@types/react": "^16.8.19",
    "@types/react-transition-group": "^2.0.14",
    "@types/slate-plain-serializer": "^0.6.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.5",
    "bundlesize": "^0.17.0",
    "chalk": "2.4.0",
    "concurrently": "^4.1.0",
    "create-emotion": "^10.0.27",
    "documentalist": "^1.5.0",
    "happo-plugin-storybook": "^2.7.0",
    "happo-plugin-typescript": "^1.0.0",
    "happo.io": "^3.12.0",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "koa-webpack": "^5.2.2",
    "libreact": "^2.1.0",
    "lint-staged": "^10.5.4",
    "marked": "^0.6.1",
    "prettier": "^1.14.2",
    "react": "^16.8.6",
    "react-docgen": "^2.21.0",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-testing-library": "^6.1.2",
    "recompose": "^0.27.1",
    "slate-plain-serializer": "^0.6.34",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^4.2.3"
  },
  "bundlesize": [
    {
      "path": "./build/**/*.js",
      "maxSize": "3 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn changeset status || echo \"ðŸ¦‹ Your code won't be published to NPM if you don't add a changeset. See CONTRIBUTING guide\""
    }
  },
  "x0": {
    "title": "GO1D - GO1 Design System",
    "basename": "",
    "outDir": "./dist",
    "meta": [
      {
        "name": "twitter:card",
        "content": "GO1 Design System"
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/components/Icons/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
